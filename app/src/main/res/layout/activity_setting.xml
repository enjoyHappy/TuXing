<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/init_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_line_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableRight="@drawable/ic_more"
        android:gravity="center"
        android:text="清除缓存"
        android:textSize="@dimen/content_main_size"
        android:id="@+id/setting_clear_tv" />

    <TextView
        android:id="@+id/setting_exit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/selector_button_exit"
        android:gravity="center"
        android:padding="12dp"
        android:text="退出"
        android:clickable="true"
        android:textColor="@color/red"
        android:textSize="@dimen/font_size_15" />

</LinearLayout>